<% include ./partials/header %>


<div class="container whiteTextColor" style="text-align: center;">
    <h1>Edit users</h1>

    <div class="row" >
        <div class="NewPost">
            <!-- REST way to code 'PUT'-->
            <form action="/editUser?_method=PUT" method="POST">

                <div class="form-group">

                    <label for="exampleFormControlSelect2"><strong>Select user</strong></label>
                        <select multiple class="form-control" name="userName">
                            <% allUsers.forEach(function(user){ %>
                                <% if (user !== currentUser){ %>
                                    <option><%= user.username %></option>
                                <% }%>
                            <%})%>
                        </select>


                    <label for="exampleFormControlSelect2"><strong>Assign role</strong></label>
                        <select multiple class="form-control" name="userRole">
                        <option>Default</option>
                        <option>Admin</option>
                        </select>

                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit</button>
                </div>


            </form>
        </div>
    </div>
    <a href="/campgrounds">Go back</a>
</div>


<% include ./partials/footer %>