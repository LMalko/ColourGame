<!DOCTYPE html>
<html>
    <head>
        <title>Campgrounds</title>
        <link rel="stylesheet" href="/bootstrap.css">
        <link rel="stylesheet" href="/stylesheets/main.css">

    </head>
    <body>

            <nav class="navbar navbar-expand-lg" style="margin-bottom: 20px;">
                <div class="container-fluid">

                    <div class="navbar-header">
                        <a class="navbar-brand whiteTextColor" href="/">Campgrounds</a>
                    </div>

                    <div class="collapse navbar-collapse" >
                        <ul class="navbar-nav mr-auto">
                            <!--<li><a class="navbarcolors" href="#">About</a></li>-->
                            <!--<li><a class="navbarcolors" href="#">Contact</a></li>-->
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <%if(!currentUser){%>
                                <li><a class="whiteTextColor" style="margin:5px;" href="/register">Sign Up</a></li>
                                <li><a class="whiteTextColor" style="margin:5px;" href="/login">Log In</a></li>
                            <%}else{%>
                                <li class="whiteTextColor"><a
                                            style="margin:5px;">CURRENT USER: <%= currentUser.username.toUpperCase() %></a></li>
                                <li><a class="whiteTextColor" style="margin:5px;" href="/logout">Log Out</a></li>
                            <%}%>
                        </ul>
                    </div>

                </div>
            </nav>

<!--Flash message-->
<div class="container">
        <!--Although error is empty, it's not undefined-->
        <% if(error && error.length > 0){%>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <%}%>

        <% if(success && success.length > 0){%>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <%}%>
</div>


