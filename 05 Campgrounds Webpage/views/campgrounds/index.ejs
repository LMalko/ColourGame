<% include ../partials/header %>

<div class="container" style="margin-top: 20px;">
    <header class="jumbotron">
        <div class="container">
            <h2>Welcome to Campgrounds!</h2>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a class="btn btn-success btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center">
        <% campgrounds.forEach(function(campground){%>
        <div class="col-lg-3 col-md-3 col-sm-6">
            <div class="card text-white bg-success">
                <img class="card-img-top py-1 pl-1 pr-1" src="<%= campground.image %>" alt="<%= campground.name %>">
                <h4 class="card-title"><%= campground.name %></h4>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-danger">More info</a>
                </p>
            </div>

            <div class="card-body">

            </div>
        </div>
        <%});%>
    </div>
</div>

<% include ../partials/footer %>






