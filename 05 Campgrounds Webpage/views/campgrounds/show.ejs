<% include ../partials/header %>

<div class="container ">
    <div class="row">
        <div class="col-md-3">
                    <p class="lead">Campgrounds</p>
                    <div class="list-group">
                        <li class="list-group-item active">1</li>
                        <li class="list-group-item active">12</li>
                        <li class="list-group-item active">122</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card text-white bg-success">

                <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
                <h4 class="card-title pl-3 pt-3"><a ><%= campground.name %></a></h4>
                <p class="pl-3 pr-3"><%= campground.description %></p>
                <p class="pl-3 pr-3"><em>Posted by: <%= campground.author.username %></em></p>

                <div class="container pb-3 pl-3">


                    <form class="Inline" action="/campgrounds/<%= campground._id %>/edit"
                          method="GET">
                        <button class="btn-group btn-primary btn-lg">Edit campground</button>
                    </form>

                    <form class="Inline" action="/campgrounds/<%= campground._id %>?_method=DELETE"
                          method="POST">
                        <button class="btn-group btn-danger btn-lg">Delete campground</button>
                    </form>


                        <h4 class="Inline float-right pt-2 pr-3">9.90$/night</h4>
                </div>

            </div>
            <div class="card text-white bg-secondary mt-4 mb-4">

                <div class="pt-3 pr-3">
                    <p>
                        <a class="float-right btn btn-warning btn-lg"
                           href="/campgrounds/<%= campground._id %>/comments/new">Add new comment</a>
                    </p>
                </div>

                <hr class="ml-3 mr-3">
                <% campground.comments.forEach(function(comment){   %>
                <div class="row mt-3 ml-1 mr-1">
                    <div class="col-md-12">
                        <p>
                            <strong><%=comment.author.username%></strong>
                            <span class="float-right">10 days ago</span>
                            <br>
                            <%=comment.text%>
                        </p>
                    </div>
                </div>
                <% }); %>

            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>