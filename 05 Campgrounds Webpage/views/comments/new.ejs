<% include ../partials/header %>

<div class="container" style="text-align: center;">
    <h1>Add New Comment To <%= campground.name %></h1>

    <div class="row" >
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/campgrounds">Go back</a>
</div>

<% include ../partials/footer %>