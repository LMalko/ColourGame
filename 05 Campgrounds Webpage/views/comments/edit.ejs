<% include ../partials/header %>

<div class="container" style="text-align: center;">
    <h1>Edit comment<%= campground.name %></h1>

    <div class="row" >
        <div class="NewPost">
            <!-- REST way to code 'PUT'-->
            <form
                    action="/campgrounds/<%= campground._id %>/comments/<%= comment._id%>?_method=PUT"
                    method="POST">
                <div class="form-group">
                    <!--Change placeholder to value to display current attribute-->
                    <!--Group attributes together in campground[] to pas to UPDATE-->
                    <input class="form-control" type="text" name="campground[name]" value="<%= comment.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value="<%= comment.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value="<%= comment.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/campgrounds">Go back</a>
</div>


<% include ../partials/footer %>